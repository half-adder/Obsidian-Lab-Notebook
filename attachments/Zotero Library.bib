  langid = {english},
  keywords = {Chromatin structure,Gene expression,Histone post-translational modifications},
  file = {C\:\\Users\\Sean\\Sync\\Zotero\\shoaib2021.pdf;C\:\\Users\\Sean\\Zotero\\storage\\W4G8UNJ8\\s41467-021-25051-2.html}
