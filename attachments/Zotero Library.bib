@article{shoaib2021,
  title = {Histone {{H4}} Lysine 20 Mono-Methylation Directly Facilitates Chromatin Openness and Promotes Transcription of Housekeeping Genes},
  author = {Shoaib, Muhammad and Chen, Qinming and Shi, Xiangyan and Nair, Nidhi and Prasanna, Chinmayi and Yang, Renliang and Walter, David and Frederiksen, Klaus S. and Einarsson, Hjorleifur and Svensson, J. Peter and Liu, Chuan Fa and Ekwall, Karl and Lerdrup, Mads and Nordenski{\"o}ld, Lars and S{\o}rensen, Claus S.},
