@article{li-kroeger,
  title = {An Expanded Toolkit for Gene Tagging Based on {{MiMIC}} and Scarless {{CRISPR}} Tagging in {{Drosophila}}},
  author = {{Li-Kroeger}, David and Kanca, Oguz and Lee, Pei-Tseng and Cowan, Sierra and Lee, Michael T and Jaiswal, Manish and Salazar, Jose Luis and He, Yuchun and Zuo, Zhongyuan and Bellen, Hugo J},
